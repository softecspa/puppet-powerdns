##########################################
# <%= scope.lookupvar('::template_header') %>
##########################################
<% unless @recursor_allow_from.empty? -%>
allow-from=<%= @recursor_allow_from.join(', ') %>
<% end -%>
<% if @recursor_dont_query == '' -%>
dont-query=
<% end -%>
local-address=<%= @recursor_local_address.join(', ') %>
local-port=53
quiet=yes
setgid=<%= @recursor_setgid %>
setuid=<%= @recursor_setuid %>
version-string=dns
